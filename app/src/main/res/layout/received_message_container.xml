<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/profileImgChat"
        android:background="@drawable/background_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/txtReceivedMsg"
        app:riv_oval="true"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtReceivedMsg"
        android:background="@drawable/background_received_message"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintWidth_max="wrap"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/profileImgChat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7"
        android:text="this is a message, this is a message, this is a message,"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>